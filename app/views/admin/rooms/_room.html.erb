<td scope="row" class="fw-bold"><%= link_to "##{room.id}", room %></td>
<td scope="row" class="fw-bold"><%= room.name %></td>
<td scope="row" class="fw-bold"><%= room.type_room %></td>
<td><%= number_to_currency room.hourly_price, locale: :vi %></td>
<td><%= number_to_currency room.day_price, locale: :vi %></td>
<td><%= number_to_currency room.monthly_price, locale: :vi %></td>
<td><%= room.discount %>%</td>
<td><%= room.amount_of_people %></td>
<td><%= room.status ? "Show" : "Hide" %></td>
<td><%= parse_time room.created_at.to_s %></td>
<td>
  <%= link_to( fa_icon("eye"), edit_admin_room_path(room), {data: {"data-bs-toggle": "tooltip"}, title: "Details", class: "mx-2 fs-5 text-success"})  %>
  <%= link_to( fa_icon("trash"), room_path(room), {data: {confirm: "Are you sure you want to delete"}, method: :delete,
  "data-bs-toggle": "tooltip", title: "Delete", class: "mx-2 fs-5 text-muted"}) %>
</td>
